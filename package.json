{
  "name": "bearbot",
  "version": "1.0.0",
  "description": "Personal Discord Bot",
  "main": "src/index.ts",
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc -p tsconfig.json",
    "dev": "npx nodemon --require=ts-node src/index.ts",
    "deploy-commands": "npx ts-node src/scripts/deploy-commands.ts",
    "show-audio": "npx ts-node src/scripts/dependency-report.ts",
    "watch": "tsc -p tsconfig.json -w",
    "test": "mocha -r ts-node/register \"tests/**/*.spec.ts\""
  },
  "author": "Michael Cannucci (MichaelCannucci@gmail.com)",
  "license": "MIT",
  "dependencies": {
    "@discordjs/builders": "^0.12.0",
    "@discordjs/opus": "^0.7.0",
    "@discordjs/rest": "^0.3.0",
    "@discordjs/voice": "^0.8.0",
    "@types/node": "^16.9.2",
    "discord-api-types": "^0.31.1",
    "discord.js": "^13.6.0",
    "dotenv": "^10.0.0",
    "ffmpeg-static": "^4.4.0",
    "opusscript": "^0.0.8",
    "sodium": "^3.0.2",
    "typescript": "^4.4.3",
    "ytdl-core": "^4.9.1"
  },
  "engines": {
    "node": "16.x"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "jest": "^27.5.1",
    "nodemon": "^2.0.12",
    "prettier": "2.4.1",
    "ts-node": "^10.2.1"
  }
}
